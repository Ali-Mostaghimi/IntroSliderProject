<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bglayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/slide_image"
            android:layout_width="@dimen/slide_icon_wh"
            android:layout_height="@dimen/slide_icon_wh"
            android:layout_gravity="center_horizontal"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/slide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/slide_title_margin_top"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/slide_title_text_size"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/slide_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/slide_desc_padding_rl"
            android:paddingLeft="@dimen/slide_desc_padding_rl"
            android:textSize="@dimen/slide_desc_text_size"
            android:layout_marginTop="@dimen/slide_desc_margin_top"
            android:gravity="center"
            android:textColor="@android:color/white"
            />

    </LinearLayout>

</RelativeLayout>